<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>

    <context-param>
        <param-name>previewUrl</param-name>
        <param-value>10.214.111.150:18088/preview</param-value>
    </context-param>
    <context-param>
        <param-name>TOCC</param-name>
        <param-value>10.214.111.150:18088</param-value>
    </context-param>

    <servlet>
        <servlet-name>AsyncCompleteServlet</servlet-name>
        <servlet-class>com.async.AsyncCompleteServlet</servlet-class>
        <async-supported>true</async-supported>
    </servlet>

    <servlet-mapping>
        <servlet-name>AsyncCompleteServlet</servlet-name>
        <url-pattern>/asyncComplete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SecurityServlet</servlet-name>
        <servlet-class>com.security.SecurityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SecurityServlet</servlet-name>
        <url-pattern>/security</url-pattern>
    </servlet-mapping>

