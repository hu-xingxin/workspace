<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">


<bean id="userMapper" class="com.spring.ioc.xml.UserMapper"></bean>

    <bean id="userServiceImpl" class="com.spring.ioc.xml.UserServiceImpl">
        <property name="userMapper" ref="userMapper"></property>
    </bean>

    <bean id="action" class="com.spring.ioc.xml.Action">
        <property name="userServiceImpl" ref="userServiceImpl"></property>
    </bean>

</beans>