<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.mapper.DeptMapper">
    
    <resultMap id="SysDeptResult" type="com.mybatis.domain.SysDept">
        <id property="deptId" column="dept_id"></id>
        <result property="parentId" column="parent_id"></result>
        <result property="ancestors" column="ancestors"></result>
        <result property="deptName" column="dept_name"></result>
        <result property="orderNum" column="order_num"></result>
        <result property="createTime" column="create_time"></result>
        <result property="updateTime" column="update_time"></result>
        <collection property="userList" javaType="java.util.ArrayList" ofType="com.mybatis.domain.SysUser">
            <id property="userId" column="user_id"></id>
            <result property="deptId" column="dept_id"></result>
            <result property="loginName" column="login_name"></result>
            <result property="userName" column="user_name"></result>
            <result property="userType" column="user_type"></result>
            <result property="email" column="email"></result>
            <result property="avatar" column="avatar"></result>
            <result property="lawNum" column="law_num"></result>
            <result property="phonenumber" column="phonenumber"></result>
            <result property="sex" column="sex"></result>
            <result property="password" column="password"></result>
            <result property="salt" column="salt"></result>
            <result property="status" column="status"></result>
            <result property="delFlag" column="del_flag"></result>
            <result property="loginIp" column="login_ip"></result>
            <result property="loginDate" column="login_date"></result>
        </collection>
    </resultMap>

    <select id="queryDeptById" parameterType="java.lang.Integer" resultMap="SysDeptResult">
        select * from sys_dept d left join sys_user u on(d.dept_id = u.dept_id) where d.dept_id = #{deptId}
    </select>

    <select id="queryDeptList" parameterType="com.mybatis.domain.SysDept" resultMap="SysDeptResult">
        select * from sys_dept
        <where>
            <if test="deptName!=null and deptName!=''">
                and dept_name like concat('%',#{deptName},'%')
            </if>
        </where>
    </select>

    <insert id="insertDept" parameterType="com.mybatis.domain.SysDept">
        insert into sys_Dept( parent_id, ancestors, dept_name, create_time, update_time)
       			values(#{parentId},#{ancestors},#{deptName},#{orderNum},#{createTime},#{updateTime})
    </insert>

    <update id="updateDept" parameterType="com.mybatis.domain.SysDept">
        update sys_dept
        <set>
            <if test="deptName!=null and deptName!=''">
                dept_name = #{deptName}
            </if>
        </set>
        where dept_id = #{deptId}
    </update>

    <delete id="deleteDeptById" parameterType="java.lang.Integer">
        delete from sys_dept where dept_id = #{deptId}
    </delete>
</mapper>